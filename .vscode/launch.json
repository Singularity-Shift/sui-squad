    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'sui-squad-bot'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sui-squad-bot",
                    "--package=sui-squad-bot"
                ],
                "filter": {
                    "name": "sui-squad-bot",
                    "kind": "bin"
                }
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'sui-squad-bot'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=sui-squad-bot",
                    "--package=sui-squad-bot"
                ],
                "filter": {
                    "name": "sui-squad-bot",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'sui_squad_core'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=sui-squad-core"
                ],
                "filter": {
                    "name": "sui_squad_core",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}